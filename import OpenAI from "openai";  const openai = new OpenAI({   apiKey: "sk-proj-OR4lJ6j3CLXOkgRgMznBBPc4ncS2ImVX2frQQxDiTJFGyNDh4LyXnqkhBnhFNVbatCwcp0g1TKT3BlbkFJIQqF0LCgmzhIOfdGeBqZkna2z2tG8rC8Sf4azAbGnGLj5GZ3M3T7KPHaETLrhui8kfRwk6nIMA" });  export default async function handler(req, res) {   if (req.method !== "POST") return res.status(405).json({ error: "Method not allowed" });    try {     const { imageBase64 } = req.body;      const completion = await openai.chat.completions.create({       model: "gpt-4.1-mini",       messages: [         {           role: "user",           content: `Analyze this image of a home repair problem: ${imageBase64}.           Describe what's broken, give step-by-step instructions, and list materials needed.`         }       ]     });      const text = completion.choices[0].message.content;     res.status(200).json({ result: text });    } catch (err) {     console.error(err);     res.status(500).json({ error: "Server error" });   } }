import OpenAI from "openai";

const openai = new OpenAI({
  apiKey: "YOUR_OPENAI_API_KEY_HERE" // Replace with your key
});

export default async function handler(req, res) {
  if (req.method !== "POST") return res.status(405).json({ error: "Method not allowed" });

  try {
    const { imageBase64 } = req.body;

    // Send to OpenAI GPT-4.1-mini for analysis
    const completion = await openai.chat.completions.create({
      model: "gpt-4.1-mini",
      messages: [
        {
          role: "user",
          content: `Analyze this image of a home repair problem: ${imageBase64}.
          Describe what's broken, give step-by-step instructions, and list materials needed.`
        }
      ]
    });

    const text = completion.choices[0].message.content;
    res.status(200).json({ result: text });

  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Server error" });
  }
}
